  "version": "0.2.0",
  "configurations": [
    {
      "name": "odoo-v16-first-module-by-gary",
      "type": "python",
      "request": "launch",
      // "stopOnEntry": true,
      "program": "${workspaceFolder}/odoo-16.0/odoo-bin",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": [
        // "-d",
        // "odoo",
        "-c",
        "${workspaceFolder}/odoo-16.0/config/odoo.conf",
        "--addons-path=${workspaceFolder}/odoo-16.0/addons, ${workspaceFolder}/odoo-16.0/odoo/addons,${workspaceFolder}/addons",
        "-d",
        // 底下為想要 install , update module 的資料庫
        // 如果不寫的話，-u 、 -i 無法生效
        "odoo16-First-module-ByGary", 
        "-u",
        "my_module",
        "-i",
        "my_module"
      ]
    }
  ]
}