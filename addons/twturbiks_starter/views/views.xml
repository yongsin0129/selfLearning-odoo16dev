<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="twturbiks_starter.list">
      <field name="name">twturbiks_starter list</field>
      <field name="model">twturbiks_starter.twturbiks_starter</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />
          <field name="value" />
          <field name="value2" />
          <field name="user_id" />
          <field name="employee_id" />
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="twturbiks_starter.form">
      <field name="name">twturbiks_starter form</field>
      <field name="model">twturbiks_starter.twturbiks_starter</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name" />
            <field name="value" />
            <field name="value2" />
            <field name="user_id" />
            <field name="employee_id" />
          </group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="twturbiks_starter.action_window">
      <field name="name">twturbiks_starter window</field>
      <field name="res_model">twturbiks_starter.twturbiks_starter</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="twturbiks_starter.action_server">
      <field name="name">twturbiks_starter server</field>
      <field name="model_id" ref="model_twturbiks_starter_twturbiks_starter" />
      <field name="state">code</field>
      <field name="code">
        action = {
        "type": "ir.actions.act_window",
        "view_mode": "tree,form",
        "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="twturbiks_starter" id="twturbiks_starter.menu_root" />

    <!-- menu categories -->

    <menuitem name="Menu 1" id="twturbiks_starter.menu_1" parent="twturbiks_starter.menu_root" />
    <menuitem name="Menu 2" id="twturbiks_starter.menu_2" parent="twturbiks_starter.menu_root" />

    <!-- actions -->

    <menuitem name="List" id="twturbiks_starter.menu_1_list" parent="twturbiks_starter.menu_1"
      action="twturbiks_starter.action_window" />
    <menuitem name="Server to list" id="twturbiks_starter" parent="twturbiks_starter.menu_2"
      action="twturbiks_starter.action_server" />

  </data>
</odoo>